<meta name="viewport" content="width=device-width" />
<link rel="stylesheet" href="@Url.Content("~/Metro/css/metro-bootstrap.css")">
<script src="@Url.Content("~/Metro/js/jquery/jquery.min.js")"></script>
<script src="@Url.Content("~/Metro/js/jquery/jquery.widget.min.js")"></script>
<script src="@Url.Content("~/Metro/js/metro/metro.min.js")"></script>
<script src="~/Scripts/utils/productUtils.js"></script>
<link href="@Url.Content("~/Content/Order.css")" rel="stylesheet" type="text/css" />


<body class="metro" id="bodyPPP">
    @model SmartB.UI.Models.EntityFramework.Product
    @{
        var productId = Model.Id;    
    }

    <label style="font-weight: bold">Tên sản phẩm: </label>
    <div class="input-control text">
        <input type="text" value="@Model.Name" disabled />

    </div>

    <label style="font-weight: bold">Giá bạn đề xuất (nghìn đồng) (*): </label>
    <div class="input-control text">
        <input id="txtUserPrice" type="text" value="" onchange="validateUserPrice()" />
        <button class="btn-clear"></button>
        <span id="errorUserPrice" style="color: red; font-style: italic;"></span>

    </div>

    <label style="font-weight: bold">Địa điểm (*): </label>
    <div class="input-control text">
        @Html.DropDownList("ddlMarket", null, String.Empty, new { @onchange = "validateMarket()" })
        <span id="errorMarket" style="color: red; font-style: italic;"></span>
    </div>
    <button class="primary" id="btnSaveUserPrice" onclick="saveUserPrice('@productId')">
        <i class="btnSuggestPrice" style="width:25px;height:25px;top:0px"></i>
        <text style="font-size :20px;top:2px">Đề Xuất Giá</text>
    </button>
   
    <br />
    <div>
        <span id="pppStatus" style="color: blue; font-size: 16px;"></span>
    </div>
</body>
