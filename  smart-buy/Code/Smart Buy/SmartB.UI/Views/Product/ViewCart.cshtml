@{
    ViewBag.Title = "ViewCart";
}

<h3>Danh sách món hàng</h3>
<table class="table bordered hovered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên sản phẩm</th>
            <th>Đơn giá (nghìn đồng)</th>
            <th>Số lượng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>Thịt bò</td>
            <td>100 - 120</td>
            <td>
                <div class="input-control text size1">
                    <input type="number" value="1" />
                </div>
            </td>
            <td>
                <button>
                    <i class="icon-checkmark"></i>
                    Cập nhật
                </button>
                <button>
                    <i class="icon-cancel-2"></i>
                    Xóa
                </button>
            </td>
        </tr>
        <tr>
            <td>2</td>
            <td>Thịt heo</td>
            <td>80 - 100</td>
            <td>
                <div class="input-control text size1">
                    <input type="number" value="2" />
                </div>
            </td>
            <td>
                <button>
                    <i class="icon-checkmark"></i>
                    Cập nhật
                </button>
                <button>
                    <i class="icon-cancel-2"></i>
                    Xóa
                </button>
            </td>
        </tr>
        <tr>
            <td>3</td>
            <td>Thịt gà</td>
            <td>50 - 70</td>
            <td>
                <div class="input-control text size1">
                    <input type="number" value="1" />
                </div>
            </td>
            <td>
                <button>
                    <i class="icon-checkmark"></i>
                    Cập nhật
                </button>
                <button>
                    <i class="icon-cancel-2"></i>
                    Xóa
                </button>
            </td>
        </tr>
        <tr>
            <td>4</td>
            <td>Thịt cừu</td>
            <td>90 - 110</td>
            <td>
                <div class="input-control text size1">
                    <input type="number" value="3" />
                </div>
            </td>
            <td>
                <button>
                    <i class="icon-checkmark"></i>
                    Cập nhật
                </button>
                <button>
                    <i class="icon-cancel-2"></i>
                    Xóa
                </button>
            </td>
        </tr>
    </tbody>
</table>
<button class="primary">
    <i class="icon-box-add"></i>
    Lưu lại
</button>
