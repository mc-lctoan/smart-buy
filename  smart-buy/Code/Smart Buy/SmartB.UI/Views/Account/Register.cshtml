@*<div id="login-bg" class="overlay" style="display: block"></div>*@
<div class="main-content" style="background: url(../../images/bg-login.jpg) no-repeat white ">
    <div class="top-left" style="padding: 60px; color: white">
            <div>
                Bạn đã có tài khoản? <a style="color:blue" class="highlight" href="@Url.Action("Login", "Account")" Title="Đến trang đăng nhập">Đăng Nhập!</a>           
            </div>
        </div>
    <div class="container fadeDown" style="padding-top: 10px; padding-bottom: 110px">
        
        <div class="span6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend class="titlespec"> <text style="margin-left:10px">ĐĂNG KÝ TÀI KHOẢN</text> </legend>

                    <div class="bg-white-input">
                        <span class="lbl-input" style="width: 32%">Tên Tài Khoản
                                <span class="lbl-require" style="display: normal">[*]</span>
                        </span>
                        <span>@Html.TextBoxFor(model => model.UserName, new { @class = "text-box", @placeholder = "Tên tài khoản", @maxlength = 36 , style="width:65%"})</span>
                        <br />
                        <span class="text-warning">@Html.ValidationMessageFor(m => m.UserName)</span>
                    </div>

                    <div class="bg-white-input">
                        <span class="lbl-input" style="width: 32%">Mật khẩu
                                <span class="lbl-require" style="display: normal">[*]</span>
                        </span>
                        <span>@Html.PasswordFor(model => model.Password, new { @class = "text-box", @placeholder = "Mật khẩu", @maxlength = 36, style="width:65%" })
                        </span>
                        <span class="text-warning">@Html.ValidationMessageFor(m => m.Password)</span>
                    </div>

                    <div class="bg-white-input">
                        <span class="lbl-input" style="width: 32%">Xác nhận mật khẩu <span class="lbl-require" style="display: normal">[*]</span>
                        </span>
                        <span>@Html.PasswordFor(model => model.ConfirmPassword, new { @class = "text-box", @placeholder = "Xác Nhận Mật khẩu", style="width:65%" })</span>
                        <br />
                        <span class="text-warning">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                    </div>
                        <div class="metro">
                            <button type="submit" class="primary pull-right">
                                <i class="icon-checkmark"></i>
                                Đăng ký
                            </button>
                        </div>
                </fieldset>
            }
        </div>
        <div class="span8"></div>
    </div>
</div>
