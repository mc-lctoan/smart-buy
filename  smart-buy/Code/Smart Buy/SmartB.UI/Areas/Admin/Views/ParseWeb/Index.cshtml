@model SmartB.UI.Areas.Admin.Models.ParserCreator

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section script
{
    <script src="@Url.Content("~/Areas/Admin/Scripts/getXPath.js")"></script>
}

<h2>Create parser</h2>
@using (Html.BeginForm("LoadWeb", "ParseWeb"))
{
    @Html.LabelFor(x => x.ParseLink)
    @Html.TextBoxFor(x => x.ParseLink)
    <input type="submit" value="View" />
}

<input type="radio" name="viewType" id="rad_tabularView" checked="checked"/> Dạng bảng <br/>
<input type="radio" name="viewType" id="rad_gridView"/> Dạng lưới <br/>

@using (Html.BeginForm("CreateParser", "ParseWeb"))
{
    <input type="radio" name="xpathValue" id="rad_tile" checked="checked"/>
    <label>Khung thông tin</label>
    <input type="text" id="xpathTile"/>
    <br/>
    
    <input type="radio" name="xpathValue" id="rad_productName"/>
    @Html.LabelFor(x => x.ProductNameXpath)
    @Html.TextBoxFor(x => x.ProductNameXpath, new { id = "xpathProductName" })
    <br/>

    <input type="radio" name="xpathValue" id="rad_price"/>
    @Html.LabelFor(x => x.PriceXpath)
    @Html.TextBoxFor(x => x.PriceXpath, new { id = "xpathPrice" })
}

@if (TempData["tmp"] != null)
{
    <iframe id="webDiv" src="@Url.Content("~/Areas/Admin/SavedPages/tmp.html")" width="1024" height="768"></iframe>   
}
