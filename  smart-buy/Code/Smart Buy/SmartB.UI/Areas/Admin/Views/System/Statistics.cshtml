                        <li>
                            <a href="@Url.Action("Index", "LogFile")">
                                <i class="icol-page-white-text"></i>
                                Quản lý log file
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </aside>
}

@section mainHeader
{
    <div id="main-header" class="page-header">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                Trang chủ
                <span class="divider">&raquo;</span>
            </li>
            <li>
                <a href="@Url.Action("Statistics", "System")">Thông tin hệ thống</a>
            </li>
        </ul>

        <h1 id="main-heading">
            Thông tin hệ thống
            <span>Thông tin các thành phần tham gia hệ thống</span>
